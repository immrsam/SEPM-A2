package a2;
import java.util.Scanner;

public class main {

	public static void main(String[] args) {
		final Scanner input = new Scanner(System.in);
		final mainMenu menu = new mainMenu(input);
		boolean selection = true;
		while(selection) {
			menu.displayMenu();
			selection = menu.getUserSelection();
		}
		
		
//		input.close();
	}
}
